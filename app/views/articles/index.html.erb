<div class="container mt-4">
  <div class="page-header">
    <div class="d-flex gap-5">
    <div>
      <h3> All Categories </h3>
      <%= link_to 'Add Category', new_category_path, class: "btn btn-success btn-sm"%>
    </div>
    <div class="flex-column">
     <h3> All Articles </h3> 
     <%= link_to 'Create an Article',  new_article_path, class: "btn btn-success btn-sm" %></div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-lg-3 border-end fs-6">
    <div>
      <% Category.all.each do |c|%>
          <%= c.name%>
      <%= link_to 'Delete', category_path(:id => c.id),:method => :delete, class: 'btn btn-danger  btn-sm'%><hr> 
      <%end%>
    </div>
  </div>
<div class="col-lg-9">
<div class="d-flex  flex-wrap">
  <%@recent_art.each do |article|%>
  <div class="col-lg-3">
    <div class="card h-100 rounded-0">
        <%= image_tag article.image.variant(resize_to_limit: [100, 100]), class: "img-responsive" %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="card h-100 rounded-0">
      <div class="card-body">       
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= truncate(article.content, :length => 40)%></p>
        <p class="card-text"><%= article.author.username.capitalize %></p>
        <%=link_to "Read More", article_path(article), class: 'btn btn-outline-success btn-sm'%>
      </div>
    </div>
  </div>
 <%end%><br >
</div>
</div>
</div>

