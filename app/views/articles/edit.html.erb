<div class="container mt-4">
<div class="d-inline-flex gap-2">
<%= link_to '<<Back',  articles_path, class: 'btn btn-secondary' %> 
<h3> Edit Article</h3> 
</div>
<hr>


<%= form_for(@article) do |form| %>
<%= render "shared/form_errors", object: form.object %>

<div class="col-sm-6 col-lg-auto" >
  <div class="card">
    <div class="card-body center bg-light">

  <div class="mb-3">
    <%= form.label :category, "Category: ", class: 'form-label fs-4 mt-3' %>
    <%= form.collection_select(:id, Category.all, :id, :name,{:miltiple => false}, {:class=>'form-select'} )%>
  </div>
  
  <div class="mb-3">
    <%= form.label :image%>
    <%= form.file_field :image, class: "form-control", placeholder: "upload" %>
  </div>

  <div class="mb-3">
    <%= form.label :title%>
    <%= form.text_field :title, class: "form-control", placeholder: "title" %>
  </div>

  <div class="mb-3">
    <%= form.label :content %>
    <%= form.text_area :content , class: "form-control", placeholder: "content " %>
  </div>

  <div class="mb-3">
    <%= form.submit "Update", class: "btn btn-primary" %>
  </div>
 
   </div>
  </div>
</div>
<%end%>
</div>