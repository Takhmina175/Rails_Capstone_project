<div class="container mt-4">
  <div class="page-header">
      <div class="d-flex">
        <h3> Create	Article</h3> &nbsp; &nbsp;
        <%= link_to 'Add Category',  new_category_path, class: "btn btn-success" %>
      </div>
  </div>
  <hr>
<%= form_for(@article) do |form| %>
<%= render "shared/form_errors", object: form.object %>

<div class="col-sm-6 col-lg-auto" >
  <div class="card">
    <div class="card-body center bg-light">

  <div class="mb-3">
    <%= form.label :category, "Category: ", class: 'form-label fs-5' %>
    <%= form.collection_select(:id, Category.all, :id, :name,{:miltiple => false}, {:class=>'form-select'},)%>
  </div>

  <div class="mb-3">
    <%= form.label :image, "Upload image: ", class: 'form-label fs-5'%>
    <%= form.file_field :image, accept: "image/jpeg, image/gif, image/png", class: "form-control", placeholder: "upload" %>
  </div>

  <div class="mb-3">
    <%= form.label :title, "Title: ", class: 'form-label fs-5'%>
    <%= form.text_field :title, class: "form-control", placeholder: "title" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, "Content: ", class: 'form-label fs-5' %>
    <%= form.text_area :content, class: "form-control", placeholder: "content " %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create", class: "btn btn-primary" %>
  </div>
 
   </div>
  </div>
</div>
<%	end	%>
</div>