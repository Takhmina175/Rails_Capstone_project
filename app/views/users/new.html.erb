<div class="container mt-5">
<div class="row justify-content-center">

<div class="card_d" style="width: 18rem;">
  <div class="card-body_d">
  <h3 class="fw-normal text-secondary mt-3">Sign Up</h3> 

<%= form_for(@user) do |form| %>
<%= render "shared/form_errors", object: form.object %>

<div class="col-sm-6 col-lg-auto" >
  <div class="card_d">
    <div class="card-body_d center bg-light">

  <div class="mb-3">
    <%= form.label :username%>
    <%= form.text_field :username, class: "form-control", placeholder: "username" %>
  </div>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "user@mail" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
 
   </div>
  </div>
</div>
<% end %>
  </div>
 </div>
</div>
</div>