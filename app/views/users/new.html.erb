<div class="session_container" >
<%= form_for(@user) do |form| %>
<%= render "shared/form_errors", object: form.object %>
<h3 class="fw-normal text-secondary mt-3">Sign Up</h3> 
  <div class="mb-3">
    <%= form.label :username%>
    <%= form.text_field :username, class: "form-control", placeholder: "username" %>
  </div>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "user@mail" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
 
<% end %>
 </div> 
