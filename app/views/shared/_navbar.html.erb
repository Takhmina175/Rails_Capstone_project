<div class="container-fluid">
  <div class="d-flex align-items-center w-100" style="justify-content: space-between">
    <div class="col-lg-3">
      <%= image_tag('logos/logo.png', :size => "105x45" )%> 
    </div>
    <div class="col-lg-6 d-flex justify-content-center align-items-center">
      <h5><%= link_to 'Home', root_path, class:'a_link' %></h5>&nbsp;&nbsp;
      <h5><%= link_to 'Write an Article', new_article_path, class:'a_link' %></h5>&nbsp;
    </div>
    <div class="col-lg-3 d-flex justify-content-end">
        <% if @current_user %> 
            <%=user_gravatar(@current_user)%>&nbsp;
            <%= @current_user.username %> | &nbsp;
            <%= link_to 'Log Out', logout_path, class:'a_link' %> &nbsp;
        <% else %>
            <%= link_to "Register", new_user_path, class:'a_link' %> |&nbsp;
            <%= link_to "Log in", new_session_path, class:'a_link'%> &nbsp;
        <% end %>&nbsp;   
        <i class="bi bi-search"></i>
    </div>
  </div>
</div>
